	spin_lock(gbl);
	WRITE_ONCE(*nfcla, 1);
	spin_lock(lcl);
	spin_unlock(lcl);
	r2 = READ_ONCE(*lcl_held);
	WRITE_ONCE(*gbl_held, 1);
	WRITE_ONCE(*gbl_held, 0);
	spin_unlock(gbl);
