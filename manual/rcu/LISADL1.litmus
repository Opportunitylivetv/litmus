LISA LISADL1
(*
 * Simple RCU case with a single grace period within an RCU read-side
 * critical section.  Deadlock case.
 *)
{
x0 = 0;
x1 = 0;
}
 P0            ;
 f[lock]       ;
 w[once] x0 1  ;
 call[sync]    ;
 w[once] x1 1  ;
 f[unlock]     ;
 r[once] r1 x0 ;
 r[once] r2 x1 ;
exists (0:r1=1 \/ 0:r2=1)
