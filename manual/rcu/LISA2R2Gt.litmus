LISA LISA2R2Gt
(*
 * Two RCU grace periods (in a single thread) and two RCU read-side
 * critical sections.  Cycle prohibited.
 *)
{
x0 = 0;
x1 = 0;
x2 = 0;
}
 P0            | P1            | P2            ;
 f[lock]       | r[once] r1 x1 | f[lock]       ;
 r[once] r2 x0 | call[sync]    | r[once] r2 x2 ;
 w[once] x1 1  | call[sync]    | w[once] x0 1  ;
 f[unlock]     | w[once] x2 1  | f[unlock]     ;
exists (1:r1=1 /\ 2:r2=1 /\ 0:r2=1)
